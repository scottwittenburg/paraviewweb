.container {
  width: 100%;
  height: 100%;
}

.sortButtonContainer {
  flex: 1 0 auto;
}

.sortButton {
  cursor: pointer;
  border: 1px solid grey;
  border-radius: 4px;
  box-sizing: border-box;
}

.selectedSortButton {
  composes: sortButton;
  border: 3px solid black
}

.sortContainerText {
  position: absolute;
  top: 0px;
  left: 0;
  font-size: smaller;
  font-weight: bolder;
}
